<div class="modal fade" id="modal<%= article.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Post löschen</h5>
            </div>
            <div class="modal-body">
                <p>
                    Wollen Sie <b>"<%= article.title %>"</b> wirklich löschen ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x"></i> Abbrechen</button>
                <a href="/articles/delete/<%= article.id %>" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Löschen
                </a>
            </div>
        </div>
    </div>
</div>