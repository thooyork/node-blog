<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/icons/bootstrap-icons.css">
    <title>Blog</title>
</head>

<body>
    <div class="container">
        <div class="d-flex my-4">
            <h1 class="card-title" style="width:100%">
                Alle Blog Posts
            </h1>
            <div class="ml-auto" style="white-space: nowrap;">
                <a href="/articles/new" class="btn btn-success"><i class="bi bi-star"></i> Post erstellen</a>
            </div>
        </div>

        <% articles.forEach(article=> { %>

            <div class="card mt-4">
                <div class="card-body">
                    <div class="d-flex">
                        <h1 class="card-title mr-auto" style="width:100%">
                            <%= article.title %>
                        </h1>
                        <div class="card-subtitle text-muted mb-2 small">
                            <%= article.createdAt.toLocaleDateString() %>
                        </div>
                    </div>
                    <div class="card-text mb-2 text-muted">
                        <%= article.description %>
                    </div>

                    <div class="d-flex">
                        <div class="mr-auto" style="width:100%">
                            <a href="/articles/<%= article.slug %>" class="btn btn-primary">
                                <i class="bi bi-chat-dots"></i> Zum Post
                            </a>
                        </div>
                        <div style="white-space: nowrap;">
                            <a href="/articles/edit/<%= article.id %>" class="btn btn-info">
                                <i class="bi bi-pen"></i> Bearbeiten
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="#modal<%= article.id %>">
                                <i class="bi bi-trash"></i> LÃ¶schen
                            </button>

                            <!-- Modal -->
                            <%- include("_modal", {article: article}) %>
                        </div>

                    </div>
                </div>
            </div>
            <% })%>
    </div>
</body>
<script src="/js/bootstrap.min.js"></script>

</html>