<div class="form-group mb-2">
    <label for="title">Titel</label>
    <input required name="title" type="text" id="title" class="form-control" value="<%= article.title %>" />
</div>

<div class="form-group mb-2">
    <label for="description">Kurzbeschreibung</label>
    <textarea id="description" name="description" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mb-2">
    <label for="markdown">Blogpost</label>
    <textarea rows="10" required id="markdown" name="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<div class="clearfix pull-right">
    <button type="submit" class="btn btn-primary float-end"><i class="bi bi-send"></i> Speichern</button>
    <a href="/" type="button" class="btn btn-secondary float-end mx-2"><i class="bi bi-x"></i> Abbrechen</a>
</div>